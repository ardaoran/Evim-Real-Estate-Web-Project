
@model Slide

<div class="container-fluid header bg-white p-0">
    <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
        <div class="col-md-6 p-5 mt-lg-5">
            <h1 class="display-5 animated fadeIn mb-4">@Model.SloganBuyuk  <span class="text-primary">@Model.SloganRenkliKelime </span> @Model.SloganBuyuk2 </h1>
            <p class="animated fadeIn mb-4 pb-2">
                @Model.SloganKucuk
            </p>
            <a asp-controller="DahaFazla" asp-action="Index" class="btn btn-primary py-3 px-5 me-3 animated fadeIn">İncelemeye Başla</a>
        </div>



        @if (Model.SlidePictures.Any())
        {
            <div class="col-md-6 animated fadeIn">
                <div class="owl-carousel header-carousel">
                    @foreach (SlidePicture pp in Model.SlidePictures)
                    {
                        <div class="owl-carousel-item">
                            <img class="img-fluid" src="@pp.Picture" alt="@pp.Name">
                        </div>
                    }


                </div>
            </div>
        }

    </div>
</div>

