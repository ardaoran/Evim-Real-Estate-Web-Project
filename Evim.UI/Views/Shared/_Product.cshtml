
@model Product
<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
    <div class="property-item rounded overflow-hidden">
        <div class="position-relative overflow-hidden">
            @if (Model.ProductPictures.Any())
            {
                <a asp-controller="Product" asp-action="Detail" asp-route-name="@GeneralTools.GetUrl(Model.Name)" asp-route-id="@Model.ID"><img class="img-fluid" src="@Model.ProductPictures.FirstOrDefault().Picture" alt="@Model.Name"></a>
            }

            <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@Model.Durum</div>
            <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@Model.Tur</div>
        </div>
        <div class="p-4 pb-0">
            <h5 class="text-primary mb-3">@Model.FiyatFormatted</h5>
            <a asp-controller="Product" asp-action="Detail" asp-route-name="@GeneralTools.GetUrl(Model.Name)" asp-route-id="@Model.ID" class="d-block h5 mb-2">@Model.Name</a>
            <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@Model.Adres</p>
        </div>
        <div class="d-flex border-top">
            <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@Model.Metrekare m²</small>
            <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@Model.YatakOdasi Yatak Odası</small>
            <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>@Model.Banyo Banyolu</small>
        </div>
    </div>
</div>